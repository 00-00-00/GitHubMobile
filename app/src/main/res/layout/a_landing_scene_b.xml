<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/a_landing_scene_b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    >
  <FrameLayout
      android:id="@+id/a_landing_scene_b_card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      >
    <android.support.v7.widget.CardView
        android:id="@+id/a_landing_scene_a_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_step_2"
        android:layout_marginRight="@dimen/view_step_2"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/view_step_1"
        app:cardElevation="@dimen/cardview_default_elevation"
        >
      <android.support.design.widget.TextInputLayout
          android:id="@+id/a_landing_scene_b_username_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/view_step_10"
          android:layout_marginLeft="@dimen/view_step_4"
          android:layout_marginRight="@dimen/view_step_4"
          android:layout_marginTop="@dimen/view_step_7"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/a_landing_scene_b_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Github User Name"
            />
      </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
  </FrameLayout>

  <Button
      android:id="@+id/a_landing_scene_b_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/a_landing_scene_b_card"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="-24dp"
      android:elevation="@dimen/fab_elevation"
      android:text="View"
      android:transitionName="@string/activity_fab_trans"
      app:layout_anchor="@id/a_landing_scene_b_card"
      app:layout_anchorGravity="bottom|center_horizontal"
      style="@style/RoundedButtonStyle.Coloured"
      />


</RelativeLayout>